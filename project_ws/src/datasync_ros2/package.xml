<?xml version="1.0"?>
<package format="3">
  <name>datasync_ros2</name>
  <version>0.1.0</version>
  <description>ROS 2 port of the nonlinear IMU-aided motion compensation node for event cameras (reference: Jhonny-Li/Motion-compensation).</description>

  <maintainer email="todo@example.com">TODO</maintainer>
  <license>Apache-2.0</license>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <depend>rclcpp</depend>
  <depend>sensor_msgs</depend>
  <depend>std_msgs</depend>
  <depend>cv_bridge</depend>
  <depend>image_transport</depend>

  <!-- Event camera messages (keep if you have dvs_msgs on ROS 2) -->
  <depend>dvs_msgs</depend>

  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
